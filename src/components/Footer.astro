---
import SocialMediaGroup from "./SocialMediaGroup.astro";
import Button2 from "./Button2.astro";
import Logo from "../icons/logo.astro";

let year = new Date().getFullYear().toString();
---
<footer>
    <div class="left-footer">
        <Logo fill="white"/>
        <SocialMediaGroup />
        <nav>
            <a href="#">HOME</a>
            <a href="#">STORIES</a>
            <a href="#">FEATURES</a>
            <a href="#">PRICING</a>
        </nav>
    </div>
    <div class="right-footer">
        <Button2 type="submit" color="dark" text="GET AN INVITE" />
        <p class="copyright">Copyright {year}. All Rights Reserved</p>
    </div>
</footer>

<style>
    footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 4rem 10.5rem;
        background-color: var(--black-color);
    }

    .left-footer {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
    }

    .left-footer nav {
        grid-row: 1 / 2;
        grid-column: 2;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-left: 6rem;
    }

    .left-footer a {
        color: var(--white-color);
        font-weight: 400;
        text-decoration: none;
    }

    .right-footer {
        text-align: right;
    }

    .copyright {
        color: var(--white-color);
        opacity: 0.5;
        text-align: right;
        font-weight: 400;
    }
</style>