---
import SocialMediaGroup from "./SocialMediaGroup.astro";
import Button2 from "./Button2.astro";
import Logo from "../icons/logo.astro";

let year = new Date().getFullYear().toString();
---
<footer>
    <div class="left-footer">
        <Logo fill="white"/>
        <SocialMediaGroup />
        <nav>
            <a href="/">Home</a>
            <a href="/stories">Stories</a>
            <a href="/features">Features</a>
            <a href="/pricing">Pricing</a>
        </nav>
    </div>
    <div class="right-footer">
        <Button2 type="submit" color="dark" text="GET AN INVITE" />
        <p class="copyright">{year}. Made by <a class="github" href="https://github.com/leivadev/photosnap-multi-page-website">Leivadev</a></p>
    </div>
</footer>

<style>

    footer {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 7rem;
        padding: 3.5rem 0;
        background-color: var(--black-color);
    }

    .left-footer {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .left-footer nav {
        padding-top: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .left-footer a {
        color: var(--white-color);
        font-weight: 700;
        font-size: 0.75rem;
        letter-spacing: 0.125rem;
        text-decoration: none;
        text-transform: uppercase;
    }

    .left-footer a:hover {
        opacity: 0.3;
    }

    .right-footer {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .copyright {
        color: var(--white-color);
        opacity: 0.5;
        font-size: 0.94rem;
        text-align: right;
    }

    .github {
        color: var(--white-color);
        font-weight: 700;
        text-decoration: none;
    }

    .github:hover {
        text-decoration: underline;
    }

    @media only screen and (min-width: 481px) {
        footer {
            flex-direction: row;
            justify-content: space-around;
            align-items: stretch;
            padding: 4rem 2.5rem;
        }

        .left-footer {
            display: grid;
        }

        .left-footer nav {
            flex-wrap: wrap;
            grid-row: 2;
            padding-top: 0;
            padding-bottom: 2.5rem;
            flex-direction: row;
            gap: 1.5rem;
        }

        .right-footer {
            align-items: flex-end;
            justify-content: space-between;
        }
    }

    @media only screen and (min-width: 801px) {

        .left-footer {
            align-items: stretch;
            grid-template-rows: 1fr 1fr;
        }

        .left-footer nav {
            grid-row: 1 / -1;
            grid-column: 2;
            padding-left: 6.5rem;
            padding-bottom: 0;
            flex-direction: column;
            align-items: flex-start;
        }
    }

</style>