---
import SocialMediaGroup from "./SocialMediaGroup.astro";
import Button2 from "./Button2.astro";
import Logo from "../icons/logo.astro";

let year = new Date().getFullYear().toString();
---
<footer>
    <div class="left-footer">
        <Logo fill="white"/>
        <SocialMediaGroup />
        <nav>
            <a href="#">Home</a>
            <a href="#">Stories</a>
            <a href="#">Features</a>
            <a href="#">Pricing</a>
        </nav>
    </div>
    <div class="right-footer">
        <Button2 type="submit" color="dark" text="GET AN INVITE" />
        <p class="copyright">Copyright {year}. All Rights Reserved</p>
    </div>
</footer>

<style>
    footer {
        display: flex;
        justify-content: space-between;
        padding: 4rem 10.5rem;
        background-color: var(--black-color);
    }

    .left-footer {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
    }

    .left-footer nav {
        grid-row: 1 / -1;
        grid-column: 2;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-left: 6.5rem;
    }

    .left-footer a {
        color: var(--white-color);
        font-weight: 700;
        font-size: 0.75rem;
        letter-spacing: 0.125rem;
        text-decoration: none;
        text-transform: uppercase;
    }

    .right-footer {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-content: space-between;
    }

    .copyright {
        color: var(--white-color);
        opacity: 0.5;
        font-size: 0.94rem;
        text-align: right;
    }
</style>