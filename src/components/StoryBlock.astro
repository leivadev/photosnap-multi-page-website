---
import Button2 from './Button2.astro';
interface Props {
    image: string;
    title: string;
    author: string;
    date: string | null;
}

const { image, title, author, date } = Astro.props;
---

<div class="card-container" style=`background-image: url('${image}')`>
    <div class="overlay"></div>
    <div class="card-content">
        <div class="card-text">
            <p class="textGray date">{date}</p>
            <h3 class="story-title">{title}</h3>
            <p class="textGray author">by {author}</p>
        </div>
        <Button2 type="button" mode="dark" text="Read Story" />
    </div>
</div>

<style>
    .card-container {
        width: 100%;
        height: 375px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-end;
        padding: 2rem;
    }

    .card-container {
        position: relative;
    }

    .overlay {
        position: absolute;
        top:0;left:0;right:0;bottom:0;
        background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
        z-index: 1;
    }

    .card-container:hover .overlay {
        opacity: 1;
    }

    .card-content {
        width: 100%;
        text-align: left;
        z-index: 2;
    }

    .card-text {
        margin: 1.25rem 0;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.25);
    }

    .story-title {
        color: var(--white-color);
        font-size: 1.1rem;
        line-height: 1.5625rem;
    }

    .textGray {
        color: var(--white-color);
        font-size: 0.8rem;
        opacity: 1;
    }

    @media only screen and (min-width: 1160px) {
        .card-container {
            height: 500px;
        }
    }

</style>