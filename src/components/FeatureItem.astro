---
interface Props {
    title: string;
    text: string;
    iconSrc: string;
    loading?: string;
    alt?: string;
}

const { title, text, iconSrc, loading = 'lazy', alt } = Astro.props;
---

<div class="feature-item">
    <img src=`${iconSrc}` alt=`${alt}` loading={loading as "lazy" | "eager" | null | undefined} class="feature-icon">
    <div class="feature-content">
        <h3 class="feature-title">{title}</h3>
        <p class="feature-text textGray">{text}</p>
    </div>
</div>

<style>
    .feature-item {
        width: 100%;
        text-align: center;
    }

    .feature-icon {
        width: 4.5rem;
        margin-bottom: 3rem;
    }

    .feature-title {
        font-size: 1.125rem;
        margin-bottom: 1rem;
    }

    .textGray {
        color: var(--black-color);
        line-height: 1.5625rem;
    }

    @media only screen and (min-width: 481px) {
        .feature {
            margin: 5rem 9rem;
        }

        .feature-item {
            display: grid;
            grid-template-rows: repeat(2, 1fr);
        }

        .feature-icon {
            grid-row: 1;
            justify-self: center;
            align-self: center;
            margin-bottom: 0;
        }

        .feature-content {
            grid-row: 2;
        }
    }
</style>