---
import Arrow from '../icons/arrow.astro';
interface Props {
    type: 'button' | 'submit' | 'reset';
    mode: 'dark' | 'light';
    text: string;
}

const { type, mode, text } = Astro.props;
---
<div>
    <button type={type} class={`${mode === 'dark' ? 'dark-button' : 'light-button'} textPrimary`}>
        {text}
    </button>
    <Arrow stroke={`${mode === 'dark' ? 'white' : 'black'}`} />
</div>

<style>

    div {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    button {
        border: none;
        position: relative;
        background-color: transparent;
        transition: color 0.3s ease-in-out;
        cursor: pointer;
    }

    button::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -1px;
      height: 2px;
      width: 100%;
      background: var(--gradient-color);
      transform: scaleX(0);
      transform-origin: bottom right;
      transition: transform 0.3s ease-in-out;
    }

    button:hover::after {
      transform: scaleX(1);
      transform-origin: bottom left;
    }

    .dark-button {
        color: var(--white-color);
    }

    .light-button {
        color: var(--black-color);
    }
</style>
